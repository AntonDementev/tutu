<%= form_for(train) do |f| %>
  <%= render 'common/errors', res: train %>

  <div class="field">
    <%= f.label :number %>
    <%= f.text_field :number %>
  </div>
  
  <div class="field">
    <%= f.label :route, "Назначить маршрут:" %>
    <%= f.collection_select :route_id, Route.all, :id, :title %>
  </div>
  
    <%= f.label :head_to_tail, "Отбражение вагонов" %>
    <%= f.radio_button :head_to_tail, true %> С головы состава
    <%= f.radio_button :head_to_tail, false %> С хвоста состава
  
  <!--div class="field">
    <%= f.label :route, "Установить на станцию:" %>
    <%= f.collection_select :current_station_id, RailwayStation.all, :id, :title %>
  </div-->
  

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
